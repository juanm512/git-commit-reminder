{
	"name": "git-commit-reminder",
	"displayName": "Git Commit Reminder",
	"description": "Reminds you to commit your changes periodically",
	"version": "0.0.1",
	"publisher": "juuanmav",
	"repository": {
		"type": "git",
		"url": "https://github.com/juanm512/git-commit-reminder"
	},
	"icon": "icon.webp",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": ["Other"],
	"activationEvents": ["*"],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.startGitReminder",
				"title": "Start Git Commit Reminder"
			},
			{
				"command": "extension.stopGitReminder",
				"title": "Stop Git Commit Reminder"
			},
			{
				"command": "extension.updateGitReminderInterval",
				"title": "Update Git Commit Reminder Interval"
			}
		],
		"configuration": {
			"title": "Git Reminder",
			"properties": {
				"gitReminder.reminderInterval": {
					"type": "number",
					"default": 30,
					"description": "Reminder interval in minutes"
				},
				"gitReminder.autoStart": {
					"type": "boolean",
					"default": true,
					"description": "Automatically start the Git commit reminder when VS Code launches"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/sinon": "^17.0.3",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"sinon": "^18.0.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
