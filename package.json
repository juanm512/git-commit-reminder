{
	"name": "git-commit-reminder",
	"displayName": "Git Commit Reminder",
	"description": "Reminds you to commit your changes periodically",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": ["Other"],
	"activationEvents": ["onCommand:extension.startGitReminder"],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.startGitReminder",
				"title": "Start Git Commit Reminder"
			},
			{
				"command": "extension.stopGitReminder",
				"title": "Stop Git Commit Reminder"
			},
			{
				"command": "extension.updateGitReminderInterval",
				"title": "Update Git Commit Reminder Interval"
			}
		],
		"configuration": {
			"title": "Git Reminder",
			"properties": {
				"gitReminder.reminderInterval": {
					"type": "number",
					"default": 30,
					"description": "Reminder interval in minutes"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
